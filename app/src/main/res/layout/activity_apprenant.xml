<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nesrine.e_learning.Apprenant">


    <ImageView
        android:id="@+id/img_etd"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/etd" />

    <Button
        android:id="@+id/be1"
        style="@style/AppTheme"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_etd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:onClick="ShowMy"
        android:text="@string/mesconf" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/be1"
        android:layout_alignLeft="@+id/be1"
        android:layout_alignRight="@+id/be1"
        android:layout_alignStart="@+id/be1"
        android:layout_below="@+id/be1"
        android:layout_marginTop="40dp"
        android:text="@string/autreCon" />
</RelativeLayout>
